-------------------------------- UPDATE MACOS --------------------------------
// Install lastest updates
sudo softwareupdate -ia 

-------------------------------- PACKAGE MANAGER --------------------------------
// Install HomeBrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

// Update HomeBrew
brew update

// Install HomeBrew Cask
brew tap caskroom/cask

-------------------------------- DEV TOOLS --------------------------------
// Install Node.js
brew install node

// Install Git
brew cask install git

-------------------------------- YARN --------------------------------
npm install -g yarn

-------------------------------- TERMINAL --------------------------------
// Install Hyper
brew cask install hyper

// Install Oh My Zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

// Install Pure
npm install -g pure-prompt

// Install hpm-cli
npm install -g hpm-cli

// Install HyperPower
hpm install hyperpower

-------------------------------- WEB BROWSER --------------------------------
// Install Google Chrome
brew cask install google-chrome

-------------------------------- CODE EDITOR --------------------------------
// Install Visual Studio Code
brew cask install visual-studio-code

-------------------------------- NPM PACKAGES --------------------------------
// Install live-server
npm install -g create-react-app

// Install live-server
npm install -g live-server

// Install nodemon
npm install -g nodemon

-------------------------------- DESIGN TOOLS --------------------------------
// Install Photoshop
brew cask install adobe-photoshop-cc

// Install Illustrator
brew cask install adobe-illustrator-cc

-------------------------------- OFFICE SUITE --------------------------------
// Install Microsoft Office
brew cask install microsoft-office

-------------------------------- MULTIMEDIA PLAYER --------------------------------
// Install VideoLAN VLC
brew cask install vlc

-------------------------------- TORRENT MANAGER --------------------------------
// Install WebTorrent
brew cask install webtorrent

-------------------------------- CHAT APP --------------------------------
// Install Slack
brew cask install slack

-------------------------------- UTILITIES --------------------------------
// Install Unarchiver
brew cask install the-unarchiver

// Install Kap
brew cask install kap

// Install Ccleaner
brew cask install ccleaner

// Install Google Featured Photos
brew cask install google-featured-photos

-------------------------------- ALL IN ONE LINE --------------------------------
sudo softwareupdate -ia && /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)" && brew update && brew tap caskroom/cask && brew install node && brew cask install git && brew cask install hyper && sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)" && npm install -g pure-prompt && npm install -g hpm-cli && hpm install hyperpower && brew cask install google-chrome && brew cask install visual-studio-code && npm install -g live-server && npm install -g nodemon && brew cask install vlc && brew cask install webtorrent && brew cask install slack && brew cask install the-unarchiver && brew cask install kap && brew cask install ccleaner && brew cask install google-featured-photos