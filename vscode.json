{
  // Zoom
  "window.zoomLevel": -1,

  // Fonts
  "editor.fontSize": 20,
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.fontFamily": "Fira Code",

  // Editor
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "editor.wordWrap": "bounded",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.snippetSuggestions": "top",
  "editor.scrollBeyondLastLine": true,
  "editor.selectionHighlight": true,

  "workbench.sideBar.location": "right",

  // Breadcrumbs
  "breadcrumbs.enabled": true,

  // HTML
  "html.format.enable": true,
  "html.format.wrapAttributes": "auto",
  "html.format.indentInnerHtml": false,
  "html.format.preserveNewLines": true,

  // CSS - StyleLint
  "stylelint.enable": true,

  // JS - Type Checking
  "javascript.implicitProjectConfig.checkJs": true,

  // JSON
  "json.format.enable": true,

  // Touchbar
  "keyboard.touchbar.enabled": false,

  // Left Explorer
  "explorer.sortOrder": "type",
  "explorer.confirmDragAndDrop": false,

  // Zen Mode
  "zenMode.centerLayout": false,

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "xml": {
      "attr_quotes": "single"
    }
  },
  "emmet.triggerExpansionOnTab": true,

  // Telemetry
  "telemetry.enableTelemetry": false,

  // Git
  "git.enableSmartCommit": true,

  //  NPM
  "npm.enableScriptExplorer": true,

  // ESlint
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact"],

  // Prettier
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.eslintIntegration": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.jsxSingleQuote": true,

  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.useExperimentalFileWatcher": true,

  // Search Exclusion
  "search.exclude": {
    "**/tmp": true,
    // "**/ios": false,
    "**/.git": true
    // "**/android": true,
    // "**/node_modules": true
  },

  // Show path on top
  "window.clickThroughInactive": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",

  // Extensions
  "extensions.autoUpdate": false,

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Material Theme Ocean",
  "workbench.iconTheme": "eq-material-theme-icons-ocean",

  // Terminal Customization
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "Fira Code",
  "workbench.colorCustomizations": {
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },
  "git.autofetch": true
}
