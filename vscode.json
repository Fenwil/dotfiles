{
  "workbench.colorTheme": "Material Theme",
  "workbench.iconTheme": "eq-material-theme-icons",

  "editor.fontFamily": "Operator Mono",
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "all",
  "editor.cursorBlinking": "phase",
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.fontWeight": "300",
  "editor.wordWrap": "on",
  "editor.fontSize": 18,
  "editor.tabSize": 2,

  "extensions.autoUpdate": false,

  "window.openFilesInNewWindow": "off",

  "html.suggest.angular1": false,
  "html.suggest.ionic": false,
  "html.format.enable": true,

  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "json.format.enable": true,
  "npm-intellisense.scanDevDependencies": true,

  "javascript.format.enable": false,
  "javascript.validate.enable": false,

  "window.zoomLevel": 0,

  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.fontSize": 16,

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/ios": true,
    "**/android": false
  },

  "workbench.colorCustomizations": {
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },

  "eslint.autoFixOnSave": true,

  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.jsxBracketSameLine": false,
  "prettier.parser": "babylon",
  "prettier.semi": false,
  "prettier.useTabs": false,
  "prettier.cssEnable": ["css", "less"],
  "prettier.javascriptEnable": ["javascript", "javascriptreact"],
  "prettier.jsonEnable": ["json"],
  "prettier.graphqlEnable": ["graphql"],
  "prettier.eslintIntegration": false,
  "prettier.typescriptEnable": ["typescript", "typescriptreact"]
}
